# Django Security Settings
DJANGO_SECRET_KEY=change-this-to-a-secure-random-secret-key-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# SSL/HTTPS Settings
# Set to False for local development without SSL certificates
# Set to True for production with proper SSL certificates
SECURE_SSL_REDIRECT=True

# CORS Settings
CORS_ALLOW_ALL=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DB_ENGINE=mysql
DB_NAME=gic_db
DB_USER=gic_user
DB_PASSWORD=secure_password_here
DB_HOST=localhost
DB_PORT=3306

# JWT Configuration (optional - uses SECRET_KEY by default)
# JWT_PRIVATE_KEY=path/to/private/key.pem
# JWT_PUBLIC_KEY=path/to/public/key.pem

# Email Configuration (for password recovery, notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@scouts.cl
SERVER_EMAIL=noreply@scouts.cl

# Frontend URL for email links
FRONTEND_URL=https://yourdomain.com

# Google Maps API Key for location features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
