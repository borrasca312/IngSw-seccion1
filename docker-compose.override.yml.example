# Docker Compose Override for Local Development
# This file is automatically loaded when using docker-compose
# It overrides settings from docker-compose.prod.yml for development

version: '3.8'

services:
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile.dev
    environment:
      - DEBUG=True
    volumes:
      - ./backend:/app
      - ./logs:/app/logs
    command: python manage.py runserver 0.0.0.0:8000
    
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile.dev
    volumes:
      - ./frontend:/app
      - /app/node_modules
    environment:
      - VITE_API_BASE_URL=http://localhost:8000/api
    
  nginx:
    ports:
      - "80:80"
