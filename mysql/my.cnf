# MySQL Custom Configuration for GIC Production
[mysqld]

# General Settings
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-time-zone = '+00:00'
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Connection Settings
max_connections = 150
max_connect_errors = 100
wait_timeout = 600
interactive_timeout = 600

# Buffer Pool Settings (ajustar según RAM disponible)
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 4
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query Cache (deshabilitado en MySQL 8.0+)
# query_cache_type = 0
# query_cache_size = 0

# Table Cache
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 8192

# Thread Settings
thread_cache_size = 50
thread_stack = 256K

# Temporary Tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Sort and Join
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

# MyISAM Settings
key_buffer_size = 128M
myisam_sort_buffer_size = 64M

# Binary Logging (para replicación y backups)
binlog_format = ROW
log_bin = /var/lib/mysql/mysql-bin
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M
sync_binlog = 1

# Slow Query Log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2
log_queries_not_using_indexes = 0

# Error Log
log_error = /var/log/mysql/error.log

# General Log (deshabilitado en producción)
general_log = 0

# InnoDB Settings
innodb_file_per_table = 1
innodb_flush_neighbors = 0
innodb_io_capacity = 200
innodb_io_capacity_max = 2000
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_autoinc_lock_mode = 2
innodb_lock_wait_timeout = 50

# Performance Schema (ajustar según necesidad de monitoreo)
performance_schema = ON
performance_schema_max_table_instances = 1000

# Security
local_infile = 0

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
