# Configuración de Variables de Entorno - GIC Frontend
# IMPORTANTE: Este es un archivo de ejemplo. Crear .env.local con valores reales.

# API Base URL
# Desarrollo: http://localhost:8000
# Producción: https://api.gic.scouts.cl
VITE_API_BASE_URL=http://localhost:8000

# Modo de la aplicación
# development | production | staging
VITE_APP_MODE=development

# Habilitar logs de auditoría en consola
VITE_ENABLE_AUDIT_LOGS=true

# Tiempo de sesión en minutos (por defecto 15)
VITE_SESSION_TIMEOUT=15

# Máximo de intentos de login (por defecto 5)
VITE_MAX_LOGIN_ATTEMPTS=5

# Habilitar protección CSRF (recomendado: true)
VITE_ENABLE_CSRF=true

# Google Places API Key (para autocompletar direcciones)
# VITE_GOOGLE_PLACES_API_KEY=

# Sentry DSN (para monitoreo de errores en producción)
# VITE_SENTRY_DSN=
