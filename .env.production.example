# Production Environment Variables for GIC
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit the .env file to version control!

# ========================================
# Database Configuration
# ========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here_min_20_chars
MYSQL_DATABASE=GIC_prod
MYSQL_USER=GIC_user
MYSQL_PASSWORD=your_secure_password_here_min_20_chars

# ========================================
# Django Configuration
# ========================================
# Generate a secure key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your_secret_key_here_min_50_chars_CHANGE_THIS_IN_PRODUCTION
DEBUG=False

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Django Admin
DJANGO_SECRET_KEY=${SECRET_KEY}
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=${ALLOWED_HOSTS}

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# Security Settings
# ========================================
# SSL/TLS Settings (set to True in production with valid certificates)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOW_ALL=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# Email Configuration (Gmail example)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
DEFAULT_FROM_EMAIL=GIC <noreply@yourdomain.com>

# ========================================
# File Upload Settings
# ========================================
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes

# ========================================
# Monitoring Configuration
# ========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ========================================
# Backup Configuration
# ========================================
BACKUP_DIR=/backups/GIC
RETENTION_DAYS=30

# ========================================
# Google Maps API (if used)
# ========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ========================================
# Performance Settings
# ========================================
# Gunicorn workers (recommended: 2-4 x CPU cores)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/gic/application.log

# ========================================
# Additional Security Headers
# ========================================
X_FRAME_OPTIONS=SAMEORIGIN
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
